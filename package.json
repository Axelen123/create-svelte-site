{
  "name": "create-svelte-site",
  "description": "Create a Svelte or Sapper app in a single command.",
  "version": "0.0.2",
  "author": "gojutin @gojutin",
  "bin": {
    "create-svelte-site": "./bin/run"
  },
  "bugs": "https://github.com/gojutin/create-svelte-site/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "chalk": "^2.4.2",
    "cli-ux": "^5.2.1",
    "degit": "^2.1.3",
    "inquirer": "^6.3.1",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@types/chai": "^4",
    "@types/inquirer": "^6.0.1",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "mocha": "^5",
    "nyc": "^13",
    "ts-node": "^8",
    "tslint": "^5",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "homepage": "https://github.com/gojutin/create-svelte-site",
  "keywords": [
    "oclif",
    "svelte",
    "sapper",
    "create-svelte-site"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "bin": "create-svelte-site"
  },
  "repository": "gojutin/create-svelte-site",
  "scripts": {
    "posttest": "tslint -p test -t stylish",
    "fix": "tslint -p test -t stylish --fix",
    "prepack": "rm -rf lib && tsc -b",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\""
  },
  "types": "lib/index.d.ts"
}
